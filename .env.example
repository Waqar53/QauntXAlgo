# QuantXalgo Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# ENVIRONMENT
# =============================================================================
QUANTXALGO_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# API SERVER
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://quantxalgo:quantxalgo@localhost:5432/quantxalgo
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# =============================================================================
# DATA PROVIDERS
# =============================================================================
# Yahoo Finance (free, no key required)
YAHOO_ENABLED=true

# Alpha Vantage (get free key at alphavantage.co)
ALPHA_VANTAGE_API_KEY=
ALPHA_VANTAGE_ENABLED=false

# Polygon.io (get free key at polygon.io)
POLYGON_API_KEY=
POLYGON_ENABLED=false

# =============================================================================
# TRADING SIMULATION
# =============================================================================
INITIAL_CAPITAL=1000000.0
BASE_CURRENCY=USD
DEFAULT_SLIPPAGE_BPS=5
DEFAULT_COMMISSION_PER_SHARE=0.005

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
MAX_POSITION_SIZE_PCT=10.0
MAX_TOTAL_EXPOSURE_PCT=100.0
MAX_DRAWDOWN_PCT=15.0
TARGET_VOLATILITY_PCT=10.0

# =============================================================================
# PATHS
# =============================================================================
DATA_DIR=./data
LOGS_DIR=./logs
CACHE_DIR=./data/cache

# =============================================================================
# SECRETS (DO NOT COMMIT)
# =============================================================================
SECRET_KEY=change-this-in-production
JWT_SECRET=change-this-in-production
